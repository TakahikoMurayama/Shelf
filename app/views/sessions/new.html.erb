<h1>Log in</h1>

    <%= form_tag sessions_path do %>
    <div class="group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <div class="group"><%= submit_tag ("Sign in") %></div>

    <% end %>
